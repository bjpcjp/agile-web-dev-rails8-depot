<div class="w-full">

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %></p>
  <% end %>

  <h1 class="font-bold text-x1 mb-6 pb-2 border-b-2">
    Catalog</h1>

  <ul>
    <% cache @products do %> <!-- book pg 115 -->
      <% @products.each do |p| %>
        <% cache p do %> <!-- book pg 115 -->
          <li class="flex mb-6">
            <%= image_tag(p.image.url, class: 'object-contain w-40 h-48 shadow mr-6') %>
            <div>
              
              <h2 class="font-bold text-lg mb-3">
                <%= p.title %></h2>
              
              <p>
                <%= sanitize(p.description) %></p>

              <div class="mt-3">
                <%= number_to_currency(p.price) %></div>

            </div>
          </li>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>
